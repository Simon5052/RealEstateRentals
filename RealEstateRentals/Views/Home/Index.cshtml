            <div class="col-md-5 text-left text-md-right">
                <div class="custom-nav1">
                    <a href="#" class="custom-prev1">Previous</a><span class="mx-3">/</span><a href="#" class="custom-next1">Next</a>
                </div>
            </div>
        </div>


        <div class="owl-carousel nonloop-block-13 mb-5">
            @foreach (var property in recentProperty)
            {
                <div class="property">
                    <a href="property-single.html">
                        <img src="~/RealEstate/stated-master/images/img_3.jpg" alt="Image" class="img-fluid">
                    </a>
                    <div class="prop-details p-3">
                        <div><strong class="price">GH &#8373; @string.Format("{0:C}", @property.Cost) </strong></div>
                        <div class="mb-2 d-flex justify-content-between">
                            <span class="w border-r">@property.Rooms Rooms</span>
                            <span class="w border-r">@property.Space SqFt</span>
                        </div>
                        <div>@property.PropertyName</div>
                    </div>
                </div>
            }



